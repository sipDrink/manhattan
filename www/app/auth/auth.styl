.auth-background
  background-image url(../../img/cover.gif)
  background-repeat no-repeat
  background-size cover
  background-position 60% 0%
  height 790px

.auth-content
  z-index 3
  position absolute
  left 100px
  bottom 150px

.auth-content .home-logo
  text-align center
  padding-left 45px

.auth-content .home-logo h1
  color #F0F0F0
  font-size 16em !important
  margin-bottom 20px !important
  font-family 'Raleway', sans-serif
  letter-spacing 20px

.auth-content .auth-tagline p
  text-align center
  font-size 3em
  color white
  font-weight 100
  margin-bottom 170px

.auth-content .auth-buttonContainer
  margin auto

.auth-content .auth-button
  width 200px
  height 75px
  border 1px solid #fff
  color #fff
  font-size 2em

.overlay
  position absolute
  width 100%
  height 790px
  top 0
  left 0
  right 0
  bottom 0
  background-image linear-gradient(to right, black, gray)
  opacity 0.4
  z-index 1
