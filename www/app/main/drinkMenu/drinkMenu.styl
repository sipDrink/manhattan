.drinkMenu-view
  background-color #261E26

.drink-list ion-scroll 
  width 100%
  height 500px
  
.drinkMenu-view ion-item
.drinkMenu-view .item-content 
  border 0
  background-color transparent

.drinkMenu-view .item-content
  font-size 1.2em
  color #ccc
  padding-left 38px
  
.drinkMenu-view .item-divider
  font-size 1.4em
  color #fff
  border-bottom 1px solid #fff
  
.drinkMenu-view .add-drink-box
  font-size 1.4em
  padding 0 24px

.add-drink-box > div
  margin 16px

.add-drink-box button.add-btn.md-fab
  font-size 1.4em
  background-color #50BAA8

.add-drink-box div:first-child
  width:62%  
  font-size 1.2em
  color rgba(255, 255, 255, 0.26)

.add-drink-box div:first-child label
  background-color transparent
  border 0

.add-drink-box md-input-group > label
  color rgba(255, 255, 255, 0.26)

.search-box h1
  color #989898
  padding-left 10px

.search-box .list
  width 300px
  margin 8px 0
  background-color transparent

.search-box div.list label.item
  border-radius 14px
  border 0
  background-color rgba(255, 255, 255, 0.16)
  font-size 1.6em

.search-box .list label i.icon
  margin-top 0
  margin-bottom 0

.search-box .list input
  font-size .9em
  font-weight bold
  color #fff

.search-box .list input:focus
.add-drink-box md-input-group.md-input-focused label
  color aquamarine

.add-drink-box md-input-group.md-default-theme.md-input-has-value:not(.md-input-focused) label
  color #B1B1B1

.add-drink-box md-input-group > input
  color #fff
  font-size 1.2em

.add-drink-box select
  background-color transparent
  color #fff
  font-size 1.2em





