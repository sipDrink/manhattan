.orderContainer
  display flex
  flex-flow row wrap
  justify-content space-around
  margin: 15px

.orderCard
  display flex
  flex-direction column
  -webkit-align-items center
  align-items center
  width 325px
  margin-bottom: 15px
  background-color #f7f7f7;
  border 2px solid gray
  border-radius 10px
  text-align center

.orderCard .customerInfo
  padding 10px
  border-bottom 1px solid gray
  width 90%
  margin auto
  font-size 1.5em

.orderCard .orderInfo
  width 100%
  padding-bottom 10px

.orderCard .buttonsContainer
  width 90%
  border-top 1px solid gray
  margin auto
  padding-top 5px

.orderCard .statusButton
  width 80px
  height 80px
  background-color yellow

