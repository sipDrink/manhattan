.orderContainerContent
  background-color #534C53

.orderContainer
  margin auto
  padding 20px

.orderCard
  width 330px
  margin-bottom 15px
  border-radius 3px !important
  text-align center
  padding 0px !important
  height 100% !important

.orderCard .customerInfo
  align-self start
  padding 10px
  width 100%
  margin auto
  margin-top 0 !important
  margin-bottom 0 !important
  font-size 1.5em
  height 70px
  background-color rgba(48, 48, 48, 0.83)
  border-top-left-radius 3px
  border-top-right-radius 3px

.orderCard .customerFace
  position relative
  z-index 1
  top -0px
  left -0px
  width 100px
  height 100px
  border 3px solid white
  border-radius 100px

.orderCard .customerFace img
  width 100%
  height 100%
  border-radius 50%

.orderCard .customerInfo span
  position relative
  top -85px
  left 40px
  text-align right
  color white
  font-weight bolder
  font-size 1.1em

.orderCard .statusSlide
  border-bottom-left-radius 3px
  border-bottom-right-radius 3px

.orderCard .inProgress
  background-color rgba(168, 87, 87, 0.73)

.orderCard .pickUp
  background-color rgba(84, 117, 144, 0.88)

.orderCard .redeemed
  background-color rgba(64, 126, 115, 0.83)

.orderCard .orderInfo
  width 100%

.orderCard table
  width 80%
  margin auto
  margin-top 30px
  margin-bottom 20px
  font-size 1.5em
  verticle-align middle

.orderCard .statusSlide span
  font-size 1.6em
  position relative
  right -40px

.orderCard table td
  height 40px
  vertical-align middle
  color white

.orderCard .drinkName
  text-align left

.orderCard .drinkQuantity
  text-align right

.orderCard .slideBoxContainer
  width 100%
  margin auto

.orderCard .slideBoxContainer .box
  padding-top 25px
  padding-bottom 20px
  border-bottom-left-radius 3px
  border-bottom-right-radius 3px

.orderCard .slideBoxContainer .red
  background-color rgba(226, 90, 80, 0.88)

.orderCard .slideBoxContainer .blue
  background-color rgba(80, 149, 216, 0.73)

.orderCard .slideBoxContainer .green
  background-color #4C9689

.orderCard .slideBoxContainer .statusBox
  color white
  padding 14px
  font-weight bolder

.orderCard .additionalActions
  text-align right
  font-size 1.5em
  padding 10px
  border-top 1px solid gray
  background-color rgba(48, 48, 48, 0.83)

.orderCard .additionalActions div
  display inline-block

.orderCard .additionalActions .md-fab i
  margin 0 !important
  color white
  font-size 1.5em

.orderCard .additionalActions .md-fab
  background-color rgba(0,0,0,.30)
  margin-right 10px




