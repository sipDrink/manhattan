.orderContainer
  margin auto
  padding 20px
  background-color #534C53
  min-height: 1000px !important;

.orderCard
  width 330px
  margin-bottom 15px
  border-radius 3px !important
  text-align center
  padding 0px !important
  height 100% !important

.orderCard .customerInfo
  align-self start
  padding 10px
  width 100%
  margin auto
  margin-top 0 !important
  margin-bottom 0 !important
  font-size 1.5em
  height 70px
  background-image linear-gradient(to top, rgba(255,255,255,0.40), rgba(255,255,255,0.70))
  border-top-left-radius 3px
  border-top-right-radius 3px

.orderCard .customerFace
  position relative
  z-index 1
  top -0px
  left -0px
  width 100px
  height 100px
  border 3px solid white
  border-radius 100px

.orderCard .customerFace img
  max-width 100%
  max-height 100%
  border-radius 50%

.orderCard .customerInfo span
  position relative
  top -85px
  left 40px
  text-align right
  color #3D3D3D
  font-weight bolder
  font-size 1.1em

.orderCard .statusSlide
  border-bottom-left-radius 3px
  border-bottom-right-radius 3px

.orderCard .inProgress
  background-color #FFFBFA

.orderCard .pickUp
  background-color #FFF6E8

.orderCard .redeemed
  background-color #E6FFE6

.orderCard .orderInfo
  width 100%

.orderCard table
  width 80%
  margin auto
  margin-top 30px
  margin-bottom 20px
  font-size 1.5em
  verticle-align middle

.orderCard .statusSlide span
  font-size 1.6em
  position relative
  right -40px

.orderCard table td
  height 40px
  vertical-align middle
  color #3D3D3D

.orderCard .drinkName
  text-align left

.orderCard .drinkQuantity
  text-align right

.orderCard .slideBoxContainer
  width 100%
  margin auto

.orderCard .slideBoxContainer .box
  padding-top 25px
  padding-bottom 20px
  border-bottom-left-radius 3px
  border-bottom-right-radius 3px

.orderCard .slideBoxContainer .red
  background-color rgb(228, 32, 18)

.orderCard .slideBoxContainer .orange
  background-color #FF9900

.orderCard .slideBoxContainer .green
  background-color #00CC00

.orderCard .slideBoxContainer .statusBox
  color white
  padding 14px
  font-weight bolder

.orderCard .additionalActions
  text-align right
  font-size 1.5em
  padding 10px
  border-top 1px solid gray
  background-image linear-gradient(to bottom, rgba(255,255,255,0.50), rgba(255,255,255,0.30))

.orderCard .additionalActions div
  display inline-block

.orderCard .additionalActions .md-fab i
  margin 0 !important
  color white
  font-size 1.5em

.orderCard .additionalActions .md-fab
  background-color rgba(0,0,0,.30)
  margin-right 10px




